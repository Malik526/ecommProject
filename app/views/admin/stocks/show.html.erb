<div class="container mx-auto md:w-2/3 w-full p-5 bg-white shadow-lg rounded-lg">
  <!-- Notification Section -->
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- Stock Details Section -->
  <div class="mb-8">
    <%= render @admin_stock %>
  </div>

  <!-- Action Buttons Section -->
  <div class="flex flex-wrap justify-start gap-4">
    <%= link_to "Edit this stock", edit_admin_product_stock_path(@admin_stock), class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium" %>
    <%= link_to "Back to stocks", admin_product_stocks_path(@admin_stock.product), class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>

    <%= button_to "Destroy this stock", admin_product_stock_path(@admin_stock), method: :delete, data: { confirm: "Are you sure?" }, class: "rounded-lg py-3 px-5 bg-red-600 text-white font-medium" %>
  </div>
</div>
