<div class="container mx-auto md:w-2/3 w-full p-4">
  <!-- Display notification if present -->
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <!-- Product Image -->
  <div class="mb-5">
    <% if @admin_product.images.attached? %>
      <%= image_tag @admin_product.images.first.variant(resize_to_limit: [150, 100]).processed, style: "width: 100px; height: auto;"%>
    <% else %>
      <%= image_tag "https://placehold.co/150x100", class: "w-full h-auto rounded-md shadow-lg" %>
    <% end %>
  </div>

  <!-- Product Details -->
  <div class="bg-white p-5 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-5"><%= @admin_product.name %></h1>
    <p class="text-gray-700 mb-5"><%= @admin_product.description %></p>
    <p class="text-gray-900 font-bold mb-5">$<%= @admin_product.price %></p>

    <!-- Action Buttons -->
    <div class="flex space-x-4">
      <%= link_to "Edit this product", edit_admin_product_path(@admin_product), class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
      
      <%= link_to "Destroy this product", admin_product_path(@admin_product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
      class: "mt-2 rounded-lg py-3 px-5 bg-red-600 text-white inline-block font-medium" %>
      <%= link_to "Back to products", admin_products_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
