<div class="min-h-screen bg-gray-100">
  <div class="container mx-auto py-10">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Shopping Cart</h1>
    <div id="errorContainer" class="text-red-600 mb-4"></div>
    
    <div data-controller="cart" class="bg-white shadow-md rounded-lg p-6">
      <!-- Cart Items Section -->
      <div id="cartItems" class="space-y-4"></div> <!-- Cart items will be appended here -->
      
      <!-- Total Amount Section -->
      <div class="border-t border-gray-200 pt-4 mt-4">
        <div id="total" class="text-lg font-semibold text-gray-800"></div>
      </div>

      <!-- Action Buttons -->
      <div class="flex justify-start mt-6 space-x-4">
        <button class="py-2 px-4 bg-gray-500 hover:bg-gray-600 rounded text-white font-medium transition duration-200" data-action="click->cart#clear">
          Clear Cart
        </button>
        <button class="py-2 px-4 bg-gray-500 hover:bg-gray-600 rounded text-white font-medium transition duration-200" data-action="click->cart#checkout">
          Checkout
        </button>
      </div>
    </div>
  </div>
</div>
